<div class="input-field row" id="<%= locals.name %>Group">

    <div class="col s4">
        <p><b><%= locals.name %></b></p>
    </div>
    <div class="col s8">
        <!-- Switch -->
        <div class="switch">
            <label>
                No
                <input type="checkbox" id="<%= locals.name %>" class="form-control" 
                    <% if (locals.readonly) { %> disabled data-readonly="true" <% } %>>
                <span class="lever"></span>
                Yes
            </label>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        $("#<%= locals.name %>Group").data("populate", value => {
            $("#<%= locals.name %>").val(value);
        })
    })
</script>