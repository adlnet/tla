<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" href="<%= locals.root %>/images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="<%= locals.root %>/images/favicon.ico" type="image/x-icon" />

    <link rel="stylesheet" href="<%= locals.root %>/css/sidebar.css">
    <link rel="stylesheet" href="<%= locals.root %>/css/materialize.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- Helper css for this site -->
    <link href="<%= locals.root %>/css/helper.css" rel="stylesheet">

    <nav class="blue-grey darken-2" role="navigation" style="height: auto">
        <div class="nav-wrapper">


            <div class="row">
                <div class="col s12">

                    <%- include("controls/common-button-link.ejs", {
                        path: locals.root + "/",
                        text: "Home",
                        color: "blue-grey",
                        darken: "darken-2",
                        id: locals.root
                    }) %>

                    <% let addArgs = section => { 
                        return {
                            path: section.path,
                            text: section.title,
                            color: "blue-grey",
                            darken: "darken-3",
                            icon: section.icon,
                            id: section.path
                        }
                    } %>

                    <% for (let section of locals.sections) { %>
                        <%- include("controls/common-button-link.ejs", addArgs(section)) %>
                    <% } %>

                    <ul id="nav-mobile" class="right">
                        <%- include("controls/common-button-link.ejs", {
                            path: locals.root + "/logout",
                            text: "Logout",
                            color: "blue-grey",
                            darken: "darken-3"
                        }) %>
                    </ul>
                </div>

            </div>
        </div>
    </nav>

    <script>
        document.addEventListener('DOMContentLoaded', async() => {
            $("a.btn").each((index, element) => {
                if (element.getAttribute("href") == window.location.pathname) {
                    element.classList.remove("blue-grey")
                }
            })
        });
    </script>
</head>