<div class="input-field row" id="<%= locals.name %>Group">

    <div class="col s4">
        <p><b><%= locals.name %></b></p>
    </div>
    <div class="col s8">
        <input 
            id="<%= locals.name %>" 
            class="form-control" 
            type="<%= locals.type || "text" %>"
            value="<%= locals.value %>"
            placeholder="Enter <%= locals.name %>" 
            
            <% if (locals.readonly) { %> disabled data-readonly="true" <% } %>
        >
    </div>

</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        $("#<%= locals.name %>Group").data("populate", value => {
            $("#<%= locals.name %>").val(value);
        })
    })
</script>