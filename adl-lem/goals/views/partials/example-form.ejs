<form method="<%= locals.method %>" action="<%= locals.action %>" target="_blank"
    style="background: #DDDDDD; padding: 10px; border-radius: 8px;">
    <div class="form-row">
        
        <% if (locals.include.user) { %>
        <div class="form-group col-md-4">
            <input name="user" type="text" class="form-control" placeholder="User UUID" value="<%= locals.user.id %>" required>
        </div>
        <% } %>

        <% if (locals.include.goal) { %>
        <div class="form-group col-md-4">
            <input name="goal" type="text" class="form-control" placeholder="Competency IRI" value="https://aws.amazon.com/certification/" <% if (locals.goalRequired) { %> required <% } %>>
        </div>
        <% } %>

        <% if (locals.include.status) { %>
        <div class="form-group col-md-2">
            <select name="status" id="inputState" class="form-control">
                <option selected>inactive</option>
                <option>active</option>
                <option>satisfied</option>
            </select>
        </div>
        <% } %>
        <div class="form-group col-mid-2">
            <button type="submit" class="btn btn-block <%= locals.style ? locals.style : "btn-success" %>"><%= locals.submit %></button>
        </div>
    </div>
</form>